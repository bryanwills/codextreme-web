---
interface Props {
  id: string;
  title: string;
  icon?: string;
  color: string;
}

const { id, title, icon = "⚙️", color } = Astro.props;
---

<div
  id={id}
  class={`group relative overflow-hidden rounded-lg p-5 cursor-pointer transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 bg-gradient-to-br ${color}`}
>
  <!-- Efecto de fondo animado -->
  <div
    class="absolute inset-0 opacity-0 group-hover:opacity-20 transition-opacity duration-300 bg-white"
  >
  </div>

  <!-- Contenido -->
  <div class="relative z-10">
    <div class="text-3xl mb-2">{icon}</div>
    <h3 class="text-lg font-bold text-white truncate">{title}</h3>
    <p class="text-white/70 mt-1 text-xs">Explora &rarr;</p>
  </div>
</div>
