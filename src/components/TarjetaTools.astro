---
const { title, description, tags, link, linkText, linkColor } = Astro.props;
---

<div
  class="tool-card group relative bg-white dark:bg-[#1A1A1A] p-6 rounded-2xl border border-gray-200 dark:border-white/5 hover:border-gray-300 dark:hover:border-white/20 transition-all duration-500 hover:shadow-2xl hover:-translate-y-1 flex flex-col h-full"
>
  <div
    class="absolute inset-0 bg-gradient-to-br from-gray-50 to-transparent dark:from-white/5 dark:to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl pointer-events-none"
  >
  </div>

  <h3
    class={`text-xl font-bold mb-3 ${linkColor} group-hover:brightness-125 transition-all`}
  >
    {title}
  </h3>

  <p
    class="text-gray-600 dark:text-gray-400 mb-6 text-sm leading-relaxed flex-grow"
  >
    {description}
  </p>

  <div class="flex flex-wrap gap-2 mb-6">
    {
      tags.map((tag: { color: string; label: string }) => (
        <span
          class={`px-3 py-1 rounded-full text-xs font-medium bg-gray-100 dark:bg-white/5 border border-gray-200 dark:border-white/10 text-gray-600 dark:text-gray-300`}
        >
          {tag.label}
        </span>
      ))
    }
  </div>

  <a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class={`inline-flex items-center justify-center w-full py-3 rounded-xl font-semibold text-sm transition-all duration-300 bg-gray-50 hover:bg-gray-100 dark:bg-white/5 dark:hover:bg-white/10 border border-gray-200 hover:border-gray-300 dark:border-white/10 dark:hover:border-white/20 text-gray-900 dark:text-white group-hover:scale-[1.02]`}
  >
    <span class={linkColor}>{linkText}</span>
    <svg
      class="w-4 h-4 ml-2"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
      ></path>
    </svg>
  </a>
</div>
