---
interface Subsection {
  title: string;
  content?: string;
  command?: string;
  language?: string;
  type?: "warning" | "note" | "info";
}

interface Tweak {
  id: string;
  name: string;
  description: string;
  benefit: string;
  impact: string;
  subsections: Subsection[];
}

interface Props {
  tweaks: Tweak[];
  title: string;
  icon: string;
  color: string;
  textColor: string;
}

const { tweaks, title, icon, color, textColor } = Astro.props;

const impactColors: Record<string, string> = {
  low: "bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-100",
  medium: "bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-100",
  high: "bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-100",
};

const impactLabels: Record<string, string> = {
  low: "Bajo",
  medium: "Medio",
  high: "Alto",
};
---

<div class="my-12">
  <div class={`bg-gradient-to-r ${color} rounded-lg shadow-md p-8 mb-8`}>
    <h2 class={`text-3xl font-bold mb-2 text-white flex items-center gap-3`}>
      <span class="text-4xl">{icon}</span>
      {title}
    </h2>
  </div>

  <div class="space-y-8">
    {
      tweaks.map((tweak) => (
        <div class="bg-white dark:bg-gray-700 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <!-- Header del Tweak -->
          <div class={`bg-gradient-to-r ${textColor} p-6 text-white`}>
            <div class="flex justify-between items-start gap-4">
              <h3 class="text-2xl font-bold">{tweak.name}</h3>
              <span
                class={`px-3 py-1 rounded-full text-xs font-semibold whitespace-nowrap ${impactColors[tweak.impact] || impactColors.medium}`}
              >
                {(impactLabels[tweak.impact] as string) || "Medio"}
              </span>
            </div>
            <p class="text-white/90 mt-2">{tweak.description}</p>
            <p class="text-white/80 mt-2 text-sm">ðŸ’¡ {tweak.benefit}</p>
          </div>

          <!-- Contenido de subsecciones -->
          <div class="p-6 space-y-6">
            {tweak.subsections.map((subsection) => (
              <div>
                <h4 class="font-bold text-lg text-gray-900 dark:text-white mb-3">
                  {subsection.title}
                </h4>

                {subsection.content && (
                  <div
                    class={`p-4 rounded-lg mb-3 whitespace-pre-wrap ${
                      subsection.type === "warning"
                        ? "bg-red-100 dark:bg-red-900 text-red-900 dark:text-red-100 border border-red-300 dark:border-red-700"
                        : subsection.type === "note"
                          ? "bg-blue-100 dark:bg-blue-900 text-blue-900 dark:text-blue-100 border border-blue-300 dark:border-blue-700"
                          : subsection.type === "info"
                            ? "bg-amber-100 dark:bg-amber-900 text-amber-900 dark:text-amber-100 border border-amber-300 dark:border-amber-700"
                            : "text-gray-700 dark:text-gray-300"
                    }`}
                  >
                    {subsection.content}
                  </div>
                )}

                {subsection.command && (
                  <div class="relative">
                    <div class="bg-gr ay-100 dark:bg-gray-800 rounded p-4 font-mono text-sm overflow-x-auto border border-gray-300 dark:border-gray-600 mb-2">
                      <code class="text-gray-900 dark:text-gray-100">
                        {subsection.command}
                      </code>
                    </div>
                    <button
                      class="copy-btn text-xs bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded transition-colors"
                      data-command={subsection.command}
                    >
                      ðŸ“‹ Copiar
                    </button>
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</div>

<script>
  document.querySelectorAll(".copy-btn").forEach((btn: Element) => {
    btn.addEventListener("click", function (this: HTMLElement) {
      const command = this.getAttribute("data-command");
      if (command) {
        navigator.clipboard.writeText(command).then(() => {
          const originalText = this.textContent;
          this.textContent = "âœ“ Copiado!";
          setTimeout(() => {
            this.textContent = originalText;
          }, 2000);
        });
      }
    });
  });
</script>
