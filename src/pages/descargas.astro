---

<BaseLayout title={t("nav.download") + " - CodeXtremeOS"}>
  <!-- Hero Section -->
  <section class="relative min-h-[40vh] flex items-center justify-center overflow-hidden bg-white dark:bg-[#141414]">
    <!-- Background Effects -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-b from-red-900/5 via-purple-900/5 to-white dark:from-red-900/20 dark:via-purple-900/10 dark:to-[#141414]"></div>
      <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-10"></div>
    </div>

    <div class="container mx-auto text-center px-4 relative z-10 pt-20">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-6xl md:text-7xl font-bold mb-8 tracking-tight">
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#FF6F61] to-[#6B5B95] drop-shadow-2xl">
            {t("nav.download")}
          </span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 max-w-2xl mx-auto leading-relaxed backdrop-blur-sm bg-white/5 p-6 rounded-2xl border border-white/10">
          {t("downloads.hero_description")}
        </p>
      </div>
    </div>
  </section>

  <!-- Anuncio NTLite -->
  <div class="bg-white dark:bg-[#141414] pb-8">
    <div class="container mx-auto px-4">
      <div class="bg-gradient-to-r from-[#FFD700]/10 to-[#FF6F61]/10 border border-[#FFD700]/20 text-gray-300 rounded-2xl p-6 backdrop-blur-sm">
        <div class="text-center text-sm md:text-base">
          <p class="leading-relaxed">
            <strong class="text-[#FFD700]">{t("downloads.announcement.title")}</strong><br />
            {t("downloads.announcement.full_text")} {t("ntlite.ntlite_name")} {t("nav.guides")}<br /><br />
            <strong class="text-[#FF6F61]">{t("downloads.announcement.security_title")}</strong><br />
            {t("downloads.announcement.recommendation")}<br />
            â€¢ <a href="https://www.ntlite.com/community/index.php" target="_blank" rel="noopener noreferrer" class="font-bold text-blue-400 hover:text-blue-300 transition-colors">
              {t("downloads.announcement.official_guides")}
            </a><br />
            â€¢ {t("downloads.announcement.our_guides")} <a href={getRelativeLocaleUrl(currentLang, "guias")} class="font-bold text-blue-400 hover:text-blue-300 transition-colors">
              {t("nav.guides")}
            </a><br /><br />
            {t("downloads.announcement.custom_tip")}
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Section -->
  <main class="bg-white dark:bg-[#141414] min-h-screen py-12 relative">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-900 dark:text-white">
        {t("downloads.11_versions.title")}
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-24">
        {latestVersions.map((version) => (
          <div class="group relative bg-white dark:bg-[#1A1A1A] rounded-2xl overflow-hidden border border-gray-200 dark:border-white/5 hover:border-gray-300 dark:hover:border-white/20 transition-all duration-500 hover:shadow-2xl hover:-translate-y-1 flex flex-col">
            <!-- Glow Effect -->
            <div class={`absolute inset-0 opacity-0 group-hover:opacity-20 transition-opacity duration-500 bg-gradient-to-br ${version.color} blur-xl -z-10`}></div>

            <div class="p-6 relative z-10 flex flex-col h-full">
              <div class="flex items-center justify-between mb-4">
                <div class={`w-12 h-12 rounded-xl flex items-center justify-center text-2xl bg-gradient-to-br ${version.color} shadow-lg`}>
                  {version.icon}
                </div>
                <div class="text-xs font-mono text-gray-500 bg-white/5 px-2 py-1 rounded">
                  {version.buildInfo}
                </div>
              </div>

              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-200 transition-colors">
                {version.title}
              </h3>

              <div class="flex flex-wrap gap-2 mb-6">
                {version.tags.map((tag) => (
                  <span class={`text-[10px] font-bold px-2 py-1 rounded-full border ${tag.color}`}>
                    {tag.label}
                  </span>
                ))}
              </div>

              <ul class="space-y-2 mb-8 flex-grow">
                {version.features.slice(0, 6).map((feature) => (
                  <li class="text-gray-400 text-xs flex items-start gap-2">
                    <span class="text-green-400 mt-0.5">âœ“</span>
                    {feature}
                  </li>
                ))}
                {version.features.length > 6 && (
                  <li class="text-gray-500 text-xs italic pl-4">
                    + {version.features.length - 6} more features...
                  </li>
                )}
              </ul>

              <a
                href={version.link}
                target="_blank"
                rel="noopener noreferrer"
                class={`mt-auto w-full py-3 rounded-xl bg-gradient-to-r ${version.color} text-white font-bold text-center text-sm hover:opacity-90 transition-opacity flex items-center justify-center gap-2`}
              >
                <span>{version.linkText}</span>
                <span class="group-hover:translate-x-1 transition-transform">â†’</span>
              </a>
            </div>
          </div>
        ))}
      </div>

      <h2 class="text-3xl font-bold text-center mb-12 text-gray-900 dark:text-white">
        {t("downloads.previous_versions.title")}
      </h2>

      <div class="flex flex-wrap justify-center gap-8">
        {previousVersions.map((version) => (
          <div class="group relative bg-white dark:bg-[#1A1A1A] rounded-2xl overflow-hidden border border-gray-200 dark:border-white/5 hover:border-gray-300 dark:hover:border-white/20 transition-all duration-500 hover:shadow-2xl hover:-translate-y-1 flex flex-col w-full md:w-[calc(50%-1rem)] lg:w-[calc(33.333%-2rem)] max-w-md">
            <div class={`absolute inset-0 opacity-0 group-hover:opacity-20 transition-opacity duration-500 bg-gradient-to-br ${version.color} blur-xl -z-10`}></div>

            <div class="p-6 relative z-10 flex flex-col h-full">
              <div class="flex items-center justify-between mb-4">
                <div class={`w-12 h-12 rounded-xl flex items-center justify-center text-2xl bg-gradient-to-br ${version.color} shadow-lg`}>
                  {version.icon}
                </div>
                <div class="text-xs font-mono text-gray-500 bg-white/5 px-2 py-1 rounded">
                  {version.buildInfo}
                </div>
              </div>

              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-200 transition-colors">
                {version.title}
              </h3>

              <div class="flex flex-wrap gap-2 mb-6">
                {version.tags.map((tag) => (
                  <span class={`text-[10px] font-bold px-2 py-1 rounded-full border ${tag.color}`}>
                    {tag.label}
                  </span>
                ))}
              </div>

              <ul class="space-y-2 mb-8 flex-grow">
                {version.features.slice(0, 6).map((feature) => (
                  <li class="text-gray-400 text-xs flex items-start gap-2">
                    <span class="text-green-400 mt-0.5">âœ“</span>
                    {feature}
                  </li>
                ))}
              </ul>

              <a
                href={version.link}
                target="_blank"
                rel="noopener noreferrer"
                class={`mt-auto w-full py-3 rounded-xl bg-gradient-to-r ${version.color} text-white font-bold text-center text-sm hover:opacity-90 transition-opacity flex items-center justify-center gap-2`}
              >
                <span>{version.linkText}</span>
                <span class="group-hover:translate-x-1 transition-transform">â†’</span>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>
</BaseLayout>
