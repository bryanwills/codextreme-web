---

<BaseLayout title={translateLabels("tools.meta_title")}>
  <!-- Hero Section -->
  <div class="relative pt-32 pb-20 overflow-hidden">
    <div class="absolute inset-0 bg-white dark:bg-[#141414]"></div>
    <div
      class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-red-900/5 via-white to-white dark:from-red-900/20 dark:via-[#141414] dark:to-[#141414]"
    >
    </div>

    <div class="container mx-auto text-center px-4 relative z-10">
      <div class="max-w-4xl mx-auto">
        <div
          class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gray-100 dark:bg-white/5 border border-gray-200 dark:border-white/10 text-red-600 dark:text-red-300 text-sm font-medium mb-8 animate-fade-in"
        >
          <span class="w-2 h-2 rounded-full bg-red-500 animate-pulse"></span>
          {translateLabels("tools.subtitle")}
        </div>

        <h1
          class="text-5xl md:text-7xl font-bold mb-8 tracking-tight animate-fade-in [text-shadow:_0_4px_30px_rgba(0,0,0,0.5)]"
        >
          <span
            class="bg-clip-text text-transparent bg-gradient-to-r from-red-400 via-orange-400 to-yellow-400"
          >
            {translateLabels("tools.title")}
          </span>
        </h1>
      </div>
    </div>
  </div>

  <!-- Secci√≥n de informaci√≥n Open Source -->
  <section class="py-12 mb-8 relative bg-white dark:bg-[#141414]">
    <div class="max-w-4xl mx-auto px-4">
      <div
        class="bg-white dark:bg-white/5 backdrop-blur-md border border-gray-200 dark:border-white/10 text-gray-600 dark:text-gray-300 rounded-2xl p-8 shadow-2xl"
      >
        <div class="text-center text-sm md:text-base space-y-4">
          <p class="leading-relaxed text-lg">
            <strong class="text-gray-900 dark:text-white block text-xl mb-2"
              >‚≠ê {translateLabels("tools.opensource.title")}</strong
            >
            {translateLabels("tools.opensource.description")}
          </p>

          <div
            class="mt-6 p-6 bg-gray-50 dark:bg-white/5 rounded-xl border border-gray-100 dark:border-white/5"
          >
            <p class="font-bold text-gray-900 dark:text-white mb-4">
              üöÄ {translateLabels("tools.opensource.how_to_help")}
            </p>
            <ul class="text-left space-y-3 max-w-md mx-auto">
              <li class="flex items-start gap-3">
                <span class="text-red-400 mt-1">1.</span>
                <span>{translateLabels("tools.opensource.step1")}</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-red-400 mt-1">2.</span>
                <span>{translateLabels("tools.opensource.step2")}</span>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-red-400 mt-1">3.</span>
                <span>{translateLabels("tools.opensource.step3")}</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Secci√≥n de Herramientas -->
  <main class="bg-white dark:bg-[#141414] pb-32 relative min-h-screen">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {categories.map((category) => <CategorySection {...category} />)}
      </div>
    </div>
  </main>
</BaseLayout>
