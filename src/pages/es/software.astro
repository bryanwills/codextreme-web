<BaseLayout title={translateLabels("software.meta_title")}>
  <!-- Hero Section -->
  <div class="relative pt-32 pb-20 overflow-hidden">
    <div class="absolute inset-0 bg-white dark:bg-[#141414]"></div>
    <div
      class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-blue-900/5 via-white to-white dark:from-blue-900/20 dark:via-[#141414] dark:to-[#141414]"
    >
    </div>

    <div class="container mx-auto text-center px-4 relative z-10">
      <div class="max-w-4xl mx-auto">
        <div
          class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gray-100 dark:bg-white/5 border border-gray-200 dark:border-white/10 text-blue-600 dark:text-blue-300 text-sm font-medium mb-8 animate-fade-in"
        >
          <span class="w-2 h-2 rounded-full bg-blue-500 animate-pulse"></span>
          {translateLabels("software.subtitle")}
        </div>

        <h1
          class="text-5xl md:text-7xl font-bold mb-8 tracking-tight animate-fade-in [text-shadow:_0_4px_30px_rgba(0,0,0,0.5)]"
        >
          <span
            class="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400"
          >
            {translateLabels("software.title")}
          </span>
        </h1>
      </div>
    </div>
  </div>

  <!-- Secci√≥n de informaci√≥n Open Source -->
  <section class="py-12 mb-8 relative bg-white dark:bg-[#141414]">
