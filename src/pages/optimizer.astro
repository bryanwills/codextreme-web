  },
  {
    id: "memory",
    title: t("optimizer.sections.memory"),
    color: "from-purple-400 to-purple-600",
    textColor: "from-purple-500 to-purple-700",
    icon: "üß†",
  },
  {
    id: "gpu",
    title: t("optimizer.sections.gpu"),
    color: "from-green-400 to-green-600",
    textColor: "from-green-500 to-green-700",
    icon: "üéÆ",
  },
  {
    id: "windows_features",
    title: t("optimizer.sections.windows_features"),
    color: "from-cyan-400 to-cyan-600",
    textColor: "from-cyan-500 to-cyan-700",
    icon: "‚öôÔ∏è",
  },
  {
    id: "firewall_security",
    title: t("optimizer.sections.firewall_security"),
    color: "from-red-400 to-red-600",
    textColor: "from-red-500 to-red-700",
    icon: "üõ°Ô∏è",
  },
  {
    id: "nagle_algorithm",
    title: t("optimizer.sections.nagle_algorithm"),
    color: "from-orange-400 to-orange-600",
    textColor: "from-orange-500 to-orange-700",
    icon: "üîß",
  },
  {
    id: "network_throttling",
    title: t("optimizer.sections.network_throttling"),
    color: "from-pink-400 to-pink-600",
    textColor: "from-pink-500 to-pink-700",
    icon: "üìä",
  },
  {
    id: "system_responsiveness",
    title: t("optimizer.sections.system_responsiveness"),
    color: "from-indigo-400 to-indigo-600",
    textColor: "from-indigo-500 to-indigo-700",
    icon: "‚ö°",
  },
  {
    id: "latency_timers",
    title: t("optimizer.sections.latency_timers"),
