---

import BaseLayout from "@/layouts/BaseLayout.astro";

import { languageList } from "@/i18n/ui";
import { useTranslations } from "@/i18n/utils";
import {
  TWEAK_CATEGORIES,
  CATEGORY_ICONS,
  CATEGORY_COLORS,
} from "@/data/tweakCategories";

const currentLang = Astro.currentLocale || "en";
const t = useTranslations(currentLang as keyof typeof languageList);
---

<BaseLayout title={t("optimizer.title") + " - CodeXtremeOS"}>
  <!-- Hero Section -->
  <section class="relative min-h-[40vh] flex items-center justify-center overflow-hidden bg-white dark:bg-[#0a0a0a]">
    <!-- Background Effects -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-b from-blue-900/5 via-purple-900/5 to-white dark:from-blue-900/20 dark:via-purple-900/10 dark:to-[#0a0a0a]"></div>
      <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-10"></div>
    </div>

    <div class="container mx-auto text-center px-4 relative z-10 pt-20">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-6xl md:text-7xl font-bold mb-8 tracking-tight">
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 drop-shadow-2xl">
            {t("optimizer.title")}
          </span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto leading-relaxed backdrop-blur-sm bg-white/50 dark:bg-white/5 p-6 rounded-2xl border border-gray-200 dark:border-white/10">
          {t("optimizer.hero_description")}
        </p>
      </div>
    </div>
  </section>

  <!-- Main Section -->
  <main class="bg-white dark:bg-[#0a0a0a] min-h-screen py-12 relative">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          TWEAK_CATEGORIES.map((category) => {
            const colors = CATEGORY_COLORS[category];
            const icon = CATEGORY_ICONS[category];
            const title = t(`optimizer.sections.${category}` as any);

            return (
              <a
                href={`/optimizer/${category}`}
                class="group relative bg-white dark:bg-[#1A1A1A] rounded-2xl overflow-hidden border border-gray-200 dark:border-white/5 hover:border-gray-300 dark:hover:border-white/20 transition-all duration-500 hover:shadow-2xl hover:-translate-y-1"
              >
                <!-- Glow Effect -->
                <div class={`absolute inset-0 opacity-0 group-hover:opacity-20 transition-opacity duration-500 bg-gradient-to-br ${colors.color} blur-xl -z-10`}></div>

                <div class="p-6 relative z-10 h-full flex flex-col">
                  <div class="flex items-center justify-between mb-4">
                    <div class={`w-12 h-12 rounded-xl flex items-center justify-center text-2xl bg-gradient-to-br ${colors.color} shadow-lg group-hover:scale-110 transition-transform duration-500`}>
                      {icon}
                    </div>
                    <div class={`w-8 h-8 rounded-full border border-gray-200 dark:border-white/10 flex items-center justify-center text-gray-400 dark:text-white/50 group-hover:bg-gray-900 dark:group-hover:bg-white group-hover:text-white dark:group-hover:text-black group-hover:scale-110 transition-all duration-300`}>
                      â†’
                    </div>
                  </div>

                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-200 transition-colors">
                    {title}
                  </h3>

                  <p class="text-gray-600 dark:text-gray-400 text-xs leading-relaxed mb-4 flex-grow line-clamp-2">
                    {t("optimizer.explore")}
                  </p>

                  <div class="flex items-center gap-2 text-[10px] font-medium text-gray-500 dark:text-white/50 group-hover:text-gray-800 dark:group-hover:text-white/80 uppercase tracking-wider">
                    <span class={`w-1.5 h-1.5 rounded-full bg-gradient-to-r ${colors.textColor}`}></span>
                    Configure
                  </div>
                </div>
              </a>
            );
          })
        }
      </div>
    </div>
  </main>
</BaseLayout>
